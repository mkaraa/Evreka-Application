<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarkerInfoFragment"
    android:orientation="horizontal"
    android:id="@+id/fragmentMarkerInfo"
    >


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:padding="5dp"
        android:background="#999"

        >

        <TextView
            android:layout_width="300sp"
            android:layout_height="50dp"
            android:text="Container"
            android:textSize="40dp"
            android:textColor="#000000"
            android:id="@+id/containerId"
            />

        <TextView
            android:layout_width="200sp"
            android:layout_height="30dp"
            android:text="NextCollection (H4)"
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/collection"
            />

        <TextView
            android:layout_width="200sp"
            android:layout_height="30dp"
            android:text="Date"
            android:textSize="20dp"
            android:textColor="#000000"
            android:id="@+id/date"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:padding="5dp"
        >


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="100sp"
                android:layout_height="30dp"
                android:text="Fullness Rate"
                android:textSize="15dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="100sp"
                android:layout_height="30dp"
                android:text="%50"
                android:textSize="15dp"
                android:textColor="#000000"
                android:id="@+id/fullnessRate"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="100sp"
                android:layout_height="30dp"
                android:text="Sensor ID"
                android:textSize="15dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="100sp"
                android:layout_height="30dp"
                android:text="5SD6A7E82"
                android:textSize="15dp"
                android:textColor="#000000"
                android:id="@+id/sensorId"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="100sp"
                android:layout_height="30dp"
                android:text="Temperature"
                android:textSize="15dp"
                android:textColor="#000000"
                />
            <TextView
                android:layout_width="100sp"
                android:layout_height="30dp"
                android:text="23 C"
                android:textSize="15dp"
                android:textColor="#000000"
                android:id="@+id/temperature"
                />
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            >

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/navigateButton"
                android:background="#114499"
                android:layout_marginRight="10dp"
                android:text="NAVIGATE"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:id="@+id/relocateButton"
                android:background="#773311"
                android:text="RELOCATE"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>